<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a New campground</h1>
        <div style="width:30%; margin=25px; auto; text-align=center">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image url" placeholder="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="dscription">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit Campground</button>
                </div>
            </form>
        
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>